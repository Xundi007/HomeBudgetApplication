<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.sanya.homebudgetapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
		<activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.LoginActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.SignupActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.SelectorActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.TransactionActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.CategoryActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.ItemActivity"/>
        <activity android:name="com.example.sanya.homebudgetapplication.activities.StatisticActivity"/>
    </application>

</manifest>